{
    "description": "Renders a model unlit with a single surface color value.",
    "version": 3,
	"shaders": [
        {
            "file": "./Unlit.shader"
        },
        {
            "file": "Shaders/Depth/DepthPass.shader"
        }
    ],
    "propertyLayout": {
        "groups": [
            {
                "id": "settings",
                "displayName": "Settings"
            }
        ],
        "properties": {
            "settings": [
                {
                    "id": "color",
                    "displayName": "Color",
                    "type": "Color",
                    "defaultValue": [ 0.5, 0.0, 0.5 ],
                    "connection": {
                        "type": "ShaderInput",
                        "id": "m_unlitColor"
                    }
                },
                {
                    "id": "baseColorTexture",
                    "displayName": "Base Color Texture",
                    "type": "Image",
                    "connection": {
                        "type": "ShaderInput",
                        "id": "m_baseColorTexture"
                    }
                }
            ]
        }
    }
}
